<Window x:Class="MHTimer.AppNameSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="表示名変更" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <!--<RowDefinition Height="1*"/>-->
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>-->

        <Label Content = "表示されるアプリ名を変更します。&#xa; 表示したい名前を入力後、OKを押してください。" Margin="5"/>
        <!--<TextBlock Grid.Row="1" Text="現在の設定:" Margin="5"/>-->
        <TextBox Grid.Row="1" Name="AppNameInput" Margin="10"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button HorizontalAlignment="Center" Name="OKButton" Width="80" Content="OK" Margin="10"/>
            <Button HorizontalAlignment="Center" Name="cancelButton" Width="80" Content="キャンセル" Margin="10"/>
        </StackPanel>
        
    </Grid>
</Window>
