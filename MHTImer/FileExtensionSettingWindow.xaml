<Window x:Class="MHTimer.FileExtensionSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="拡張子の設定"
        Height="200"
        Width="350"
        ResizeMode="NoResize"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="半角スラッシュ区切りで拡張子を設定してください。&#xa;例:　.png/.jpg/.psd" Margin="5"/>
        <TextBox Grid.Row="1" Name="TextBox" Margin="10"/>
        <Button Grid.Row="2" Name="OKButton" Content="OK" Margin="10"/>

    </Grid>
</Window>