<Window x:Class="MHTimer.MergedNameSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="マージ設定"
        Height="200"
        Width="300"
        ResizeMode="NoResize"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="マージ後のファイル名を入力してください" Margin="5"/>
        <TextBox Grid.Row="1" Name="TextBox" Margin="10"/>
        <Button Grid.Row="2" Name="OKButton" Content="OK" Margin="10"/>

    </Grid>
</Window>